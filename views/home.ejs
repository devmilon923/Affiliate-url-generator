<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Url Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
          "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-bold mb-4">Create Affiliate URL</h1>

      <% if (locals.url) { %>
      <div class="mb-4">
        <a target="_blank" href="/" class="text-blue-600 hover:underline"
          ><< Go Back</a
        >
        <ul class="list-disc ml-5 mt-2">
          <li>
            <span class="font-semibold"><%= locals.url %></span> -
            <a
              target="_blank"
              href="<%= locals.url %>"
              class="text-blue-600 hover:underline"
              >Go And Check</a
            >
          </li>
        </ul>
      </div>
      <% } %>

      <form method="post" action="./url" class="mb-4">
        <input
          type="url"
          required
          placeholder="Original URL..."
          name="mainUrl"
          class="border rounded p-2 w-full"
        />
        <button
          type="submit"
          class="bg-blue-600 text-white font-semibold p-2 rounded mt-2"
        >
          Submit
        </button>
      </form>

      <% if (locals.urls) { %>
      <h2 class="text-2xl font-bold mb-4">Your Affiliate Data</h2>
      <table
        class="min-w-full bg-white border border-gray-300 rounded-lg shadow-lg"
      >
        <thead>
          <tr class="bg-gray-200 text-gray-600">
            <th class="border px-4 py-2">S. No</th>
            <th class="border px-4 py-2">Main URL</th>
            <th class="border px-4 py-2">Redirect ID</th>
            <th class="border px-4 py-2">Redirect URL</th>
            <th class="border px-4 py-2">Click</th>
            <th class="border px-4 py-2">Analytics</th>
          </tr>
        </thead>
        <tbody>
          <% locals.urls.forEach((data, index) => { %>
          <tr class="hover:bg-gray-100">
            <td class="border px-4 py-2"><%= index + 1 %></td>
            <td class="border px-4 py-2"><%= data.mainUrl %></td>
            <td class="border px-4 py-2"><%= data.shortUrl %></td>
            <td class="border px-4 py-2">
              <a
                target="_blank"
                href="http://localhost:3000/url/<%= data.shortUrl %>"
                >http://localhost:3000/url/<%= data.shortUrl %></a
              >
            </td>
            <td class="border px-4 py-2"><%= data.history.length %></td>
            <td class="border px-4 py-2">
              <a href="/analytics/<%=  data._id %>">See more</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
